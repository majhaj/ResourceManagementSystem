@inherits LayoutComponentBase

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar p-3 border-end shadow-sm">
            <div class="position-sticky">
                <h5 class="mb-4"><i class="bi bi-kanban-fill me-2"></i>RMS Panel</h5>
                <NavMenu />
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
            <div class="d-flex justify-content-end mb-3">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-info-circle me-1"></i> About
                </a>
            </div>

            <article>
                @Body
            </article>
        </main>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
